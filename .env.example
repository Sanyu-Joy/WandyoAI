# WandyoAI Environment Variables Template
# Copy this to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# External Services for AI Features

# Typesense (Search Engine)
TYPESENSE_API_KEY=your-typesense-api-key
TYPESENSE_HOST=your-typesense-host.a1.typesense.net
TYPESENSE_PORT=443
TYPESENSE_PROTOCOL=https

# Qdrant (Vector Database)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# AI Model APIs (Optional - for enhanced features)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring & Analytics (Optional)
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Development Only
# These are automatically provided in Replit
# DATABASE_URL=${DATABASE_URL}
# PGHOST=${PGHOST}
# PGPORT=${PGPORT}
# PGUSER=${PGUSER}
# PGPASSWORD=${PGPASSWORD}
# PGDATABASE=${PGDATABASE}